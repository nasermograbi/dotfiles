[alias]
  s = status --short
  aa = add .
  c = commit
  cm = commit -m
  ca = commit --amend
  co = checkout
  cb = checkout -b
  lol = log --graph --decorate --pretty='format:%C(yellow)%h%Cgreen%d%Creset %s %C(white) (%an, %ar)%Creset' --abbrev-commit

[user]
	name = Naser Mugrabi
	email = naser.mugrabi@raketadesign.com

[core]
  editor=/usr/bin/vim
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore_global

[branch]
  autosetuprebase = always

[push]
  default = current

[diff]
  tool = vimdiff
  noprefix = true

[help]
  autocorrect = 1

[difftool]
  prompt = false